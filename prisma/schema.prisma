generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id          String       @id @default(cuid())
  studentNo   String       @unique
  email       String       @unique
  firstName   String
  lastName    String
  passwordHash String
  course      String?
  yearLevel   String?
  phone       String?
  address     String?
  status      String       @default("Active")
  enrollments Enrollment[]
  faceEnrollment FaceEnrollment?
  documentRequests DocumentRequest[]
  createdAt   DateTime     @default(now())
}

model FaceEnrollment {
  id         String   @id @default(cuid())
  studentId  String   @unique
  student    Student  @relation(fields: [studentId], references: [id])
  descriptor Json
  depthData  Json?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Course {
  id         String      @id @default(cuid())
  code       String      @unique
  title      String
  units      Int
  schedules  Schedule[]
  enrollments Enrollment[]
  createdAt  DateTime    @default(now())
}

model Schedule {
  id        String   @id @default(cuid())
  day       String
  time      String
  room      String
  courseId  String
  course    Course   @relation(fields: [courseId], references: [id])
}

model Enrollment {
  id         String   @id @default(cuid())
  studentId  String
  courseId   String
  student    Student  @relation(fields: [studentId], references: [id])
  course     Course   @relation(fields: [courseId], references: [id])
  createdAt  DateTime @default(now())
}

enum DocumentStatus {
  pending
  processing
  submitted
  ready
}

enum DocumentType {
  transcript_of_records_official
  transcript_of_records_unofficial
  certificate_of_good_moral_character
  diploma
  certificate_of_enrollment
  certificate_of_grades
  honorable_dismissal
  certificate_of_transfer_credential
  certificate_of_graduation
  certificate_of_units_earned
}

model DocumentRequest {
  id          String         @id @default(cuid())
  studentId   String
  student     Student        @relation(fields: [studentId], references: [id])
  type        DocumentType
  status      DocumentStatus
  referenceNo String         @unique
  requestedAt DateTime       @default(now())
  completedAt DateTime?
  copies      Int            @default(1)
  purpose     String?
  deliveryMethod String?
  paymentMethod String?
  totalAmount Int?
  updatedAt   DateTime       @updatedAt
}
